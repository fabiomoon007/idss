
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler", 
    "jsx": "react-jsx",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "sourceMap": true,
    "declaration": false,
    "resolveJsonModule": true 
  },
  "include": [
    "src/**/*",
    "netlify/functions/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}